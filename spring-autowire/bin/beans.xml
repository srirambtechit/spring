<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<context:annotation-config />

	<bean id="studentBean" class="com.learning.spring.bean.Student">
		<property name="id" value="1000" />
		<property name="name" value="Sriram" />
		<property name="email" value="sriram@gmail.com" />
	</bean>

	<bean id="address" class="com.learning.spring.bean.Address">
		<property name="doorNumber" value="452" />
		<property name="street" value="1st cross street" />
		<property name="city" value="Chennai" />
	</bean>

</beans>  
